{{#partial "body"}}
    <div class="container center">
        <div class="row">
            <div class="col l12 ">
                <div class="card white">
                    <div class="card-content black-text center">
                        <span class="card-title">List of all users greeted</span>
                        <br/>
                        {{#if err}}
                            <div class="row">
                                <div class="col l12">
                                    <h4>{{err}}</h4>
                                </div>
                            </div>
                        {{/if}}
                        <table class="centered responsive-table highlight striped bordered">
                            <thead>
                            <tr>
                                <th>First Name</th>
                            </tr>
                            </thead>

                            <tbody>
                            {{#each greeted}}
                                <tr>
                                    <td><a href="/greeted/{{name}}">{{name}}</a></td>
                                </tr>
                            {{/each}}

                            </tbody>
                        </table>
                    </div>
                    <br/>
                    <div class="card-action">
                        <a href="/">Back</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}