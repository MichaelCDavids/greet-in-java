{{#partial "body"}}
    <div class="container center">
        <div class="container center">
            <div class="row">
                <div class="col s12 l8 offset-l2">
                    <div class="card">
                        <div class="card-content grey-text">
                            <h1 class="card-title">Greetings v1.0.0</h1>
                            <a href="/greeted" class="btn btn-floating btn-large">{{counter}}</a>
                            <br/>
                            <br/>
                            <form action="/greet" method="post" class="white--text">
                                <div class="row">
                                    <input id="name" name="name" class=" col l8 offset-l2 grey lighten-3 center"
                                           type="text"/>
                                </div>
                                <div class="row">
                                    <div class="col l8 offset-l2">
                                        <label></label>
                                        <select id="language" name="language" class="browser-default">
                                            <option class="browser-default center" value="" disabled selected>Select
                                                language
                                            </option>
                                            <option value="english">English</option>
                                            <option value="afrikaans">Afrikaans</option>
                                            <option value="xhosa">isiXhosa</option>
                                            <option value="french">French</option>
                                            <option value="italian">Italian</option>
                                            <option value="german">German</option>
                                            <option value="arabic">Arabic</option>
                                        </select>
                                    </div>
                                </div>
                                <button class="btn waves-effect waves-light pulse" type="submit" name="greet">Greet
                                    <i class="material-icons right">emoji_people</i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{#if err}}
            <div class="row">
                <div class="col l12">
                    <h4>{{err}}</h4>
                </div>
            </div>
        {{/if}}
        {{#if message}}
            <div class="row">
                <div class="col l10 offset-l1 ">
                    <div class="card-panel teal">
                        <h1 class="white-text">{{message}}</h1>
                    </div>
                </div>
            </div>
        {{/if}}
    </div>
{{/partial}}

{{> layout.hbs}}